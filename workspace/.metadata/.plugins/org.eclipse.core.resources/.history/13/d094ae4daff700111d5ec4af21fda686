#include <iostream>
using namespace std;

int choice;

int main() {
	choice = 0;
	while(!choice) {
		cout << "1. Sleeping\n2. Walking\n3. Basketball" << endl;
		cout << ">> ";
		cin >> choice;
	}

	switch(choice) {
	default:
		cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
		break;
	}


	return 0;
}
